{
  "name": "project-sesame",
  "version": "1.0.0",
  "description": "Project Sesame",
  "main": "./dist/server.js",
  "exports": "./dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "repository": {
    "url": "https://github.com/GoogleChromeLabs/project-sesame"
  },
  "license": "Apache-2.0",
  "keywords": [
    "node",
    "express",
    "webauthn",
    "fido2",
    "passkey",
    "fedcm"
  ],
  "dependencies": {
    "@google-cloud/connect-firestore": "3.0.0",
    "@material/mwc-drawer": "0.27.0",
    "@material/mwc-snackbar": "0.27.0",
    "@material/mwc-top-app-bar": "0.27.0",
    "@material/textfield": "14.0.0",
    "@material/web": "1.2.0",
    "@simplewebauthn/server": "9.0.1",
    "@simplewebauthn/types": "9.0.1",
    "base64url": "3.0.1",
    "dotenv": "16.4.1",
    "express": "4.18.2",
    "express-handlebars": "7.1.2",
    "express-session": "1.18.0",
    "express-useragent": "1.0.15",
    "firebase-admin": "12.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "9.0.2",
    "lit": "3.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.6",
    "@types/express": "4.17.21",
    "@types/express-session": "1.17.10",
    "@types/express-useragent": "1.0.5",
    "@types/jsonwebtoken": "9.0.5",
    "@types/node": "20.11.16",
    "esbuild": "^0.20.1",
    "firebase-tools": "13.2.1",
    "glob": "10.3.10",
    "nodemon": "3.0.3",
    "rimraf": "5.0.5",
    "rollup": "4.9.6",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-import-css": "3.4.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-scss": "4.0.0",
    "rollup-plugin-sourcemaps": "0.6.3",
    "sass": "^1.70.0",
    "typescript": "5.3.3"
  },
  "scripts": {
    "build": "npm run clean; rollup -c; tsc -p src/tsconfig.json",
    "build:server": "npx esbuild --platform=node --format=esm --packages=external --bundle src/server/index.ts --outfile=dist/server.js --sourcemap",
    "dev:server": "nodemon --watch 'src/server/*' -e ts,html --exec 'npm run build:server && npm run dev'",
    "clean": "rimraf ./dist",
    "dev": "NODE_ENV=localhost node --enable-source-maps dist/server.js",
    "start": "node dist/server.js",
    "deploy": "npm run build && gcloud app deploy dev.yaml --project=google.com:project-sesame",
    "deploy:prod": "npm run build && gcloud app deploy app.yaml --project=google.com:project-sesame",
    "logs": "gcloud app logs tail --project=google.com:project-sesame",
    "emulator": "firebase emulators:start --only firestore --project=google.com:project-sesame --import=./.data --export-on-exit"
  }
}
